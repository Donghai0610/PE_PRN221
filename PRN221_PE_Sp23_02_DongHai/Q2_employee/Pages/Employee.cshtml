@page
@model Q2_employee.Pages.EmployeeModel
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h2>Q2-List Product</h2>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Employee Name</th>
                <th>Title</th>
                <th>BirthDate</th>
                <th>HireDate</th>
                <th>Department</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Employees)
            {
                <tr>
                    <td>@item.EmployeeId</td>
                    <td>@item.LastName  @item.FirstName</td>
                    <td>@item.Title</td>
                    <td>@item.BirthDate</td>
                    <td>@item.HireDate</td>
                    <td>@item.Department?.DepartmentName</td>
                    <td>
                        <a asp-page-handler="Delete" asp-route-id="@item.EmployeeId" onclick="return confirm('Do you want to delete this product?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
