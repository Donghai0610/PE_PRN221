@page
@model Q2.Pages.ProductModel
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h2>Q2-List Product</h2>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Category</th>
                <th>QuantityPerUnit</th>
                <th>UnitPrice</th>
                <th>UnitIntStock</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.Category?.CategoryName</td>
                    <td>@item.QuantityPerUnit</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.UnitsInStock</td>
                    <td>
                        <a asp-page-handler="Delete" asp-route-id="@item.ProductId" onclick="return confirm('Do you want to delete this product?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>