@page
@model Q2_2.Pages.Course.AddModel
@{
    ViewData["Title"] = "Create New Course";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <!-- Title Input -->
    <div>
        <label>Title:</label>
        <input type="text" asp-for="Course.Title" />
        <span asp-validation-for="Course.Title" class="text-danger"></span>
    </div>

    <!-- Description Input -->
    <div>
        <label>Description:</label>
        <input type="text" asp-for="Course.Description" />
        <span asp-validation-for="Course.Description" class="text-danger"></span>
    </div>

    <!-- Instructor Dropdown -->
    <div>
        <label>Instructor:</label>
        <select asp-for="Course.InstructorId">
            <option value="">Select an instructor</option>
            @foreach (var instructor in Model.instructors)
            {
                <option value="@instructor.InstructorId">@instructor.Name</option>
            }
        </select>
        <span asp-validation-for="Course.InstructorId" class="text-danger"></span>
    </div>

    <!-- Category Checkboxes -->
    <div>
        <label>Category:</label>
        @foreach (var category in Model.categories)
        {
            <div>
                <input type="checkbox" asp-for="SelectedCategoryIds" value="@category.CategoryId" />
                <label>@category.CategoryName</label>
            </div>
        }
    </div>

    <button type="submit">Create New Course</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
